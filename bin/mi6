#!/usr/bin/env perl6
use v6;
use App::Mi6;

my $app = App::Mi6.new;


#| Create new module
multi MAIN("new", 
            $module, #= Module::To::Create
            $license-name = 'GPLv3' #= License name
        ) {
    $app.cmd("new", $module, $license-name);
}

#| Build the module in current directory
multi MAIN("build") {
    $app.cmd("build");
}

#| Make release
multi MAIN("release") {
    $app.cmd("release");
}
