#!/usr/bin/env perl6
use v6;
use Ddt;

#| Create new module
multi MAIN("new", 
            $module, #= Module::To::Create
            $license-name = 'GPLv3' #= License name
        ) {
    my $app = Ddt.new: $module;
    $app.init($license-name);
}

#| Build the module in current directory
multi MAIN("build") {
    Ddt.new.cmd("build");
}

#| Make release
multi MAIN("release") {
    Ddt.new.cmd("release");
}
